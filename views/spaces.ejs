<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <style>
       body{
      background-color: red;
      text-align: center;
      vertical-align: middle;
    }
    .logo{
        float: left;
        padding:30px
    }
  </style>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-centre">
      <div class="container">
  
        <ul class="nav navbar-nav navbar-centre">
          <li class="active"><a href="/">HOME</a></li>
          <li class="active"><a href="/about">ABOUT US</a></li>
          <li class="active"><a href="/Dashboard">DASHBOARD</a></li>
         
          <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Space </a>
            <ul class="dropdown-menu">
                <li><a href="/space" class="dropdown-item">Enter Space</a></li>
              <li><a href="/spaces" class="dropdown-item">View Space</a></li>
            </ul></li>
            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Entry </a>
              <ul class="dropdown-menu">
                  <li><a href="/Entry" class="dropdown-item">Entry Form</a></li>
                <li><a href="/Entries" class="dropdown-item">Entry Details</a></li>
              </ul></li>

              <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Exit </a>
                <ul class="dropdown-menu">
                    <li><a href="/Exit" class="dropdown-item">Entry Form</a></li>
                  <li><a href="/Exits" class="dropdown-item">Exit Details</a></li>
                </ul></li>
              <li class="active"><a href="/logout">LOGOUT</a></li>
        </ul>
       
      </div>
    </nav>
<div class="container">
    <div class="row">
        <h1>Space Lists</h1>
        <br>
     <table class="table table-striped table-primary">
      <thead>
        <tr>
          <th>Space Title</th>
           <th>Parking Space</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
       <% if(records.length >0){
        records.forEach(function(row){
        %>
        <tr>
          <td><%= row.spacetitle %></td>
          <td><%= row.totalparkingspace %></td>
         
          <td><a class="btn btn-primary btn-xs" href="/spaces/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
            <a class="btn btn-danger btn-xs" href="/spaces/delete/<%= row._id %>"><i class="fa fa-trash"></i></a>
          </td>
        </tr>
        <%  }) } %>
      </tbody>
    </table>
  </div>
</div>
</body>
</html>